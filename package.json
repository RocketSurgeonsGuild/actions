{
  "name": "rsg-actions",
  "version": "0.0.0",
  "private": true,
  "description": "Rocket Surgeons Actions",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint --fix **/*.ts",
    "dist": "npm run dist:merge-labels && npm run dist:sync-milestone",
    "dist:merge-labels": "ncc build ./merge-labels/src/main.ts -o ./merge-labels/dist/",
    "dist:sync-milestone": "ncc build ./sync-milestone/src/main.ts -o ./sync-milestone/dist/",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run dist && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Rocket Surgeons Guild",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^0.4.0",
    "@actions/cache": "^1.0.2",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.0",
    "@actions/http-client": "^1.0.8",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.0",
    "ix": "^4.0.0",
    "lodash": "^4.17.20",
    "lodash-es": "^4.17.15",
    "rxjs": "^6.6.3",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/js-yaml": "^3.12.4",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^14.11.7",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-rule-documentation": "^1.0.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "jest-circus": "^26.5.2",
    "jest-cli": "^26.5.2",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
